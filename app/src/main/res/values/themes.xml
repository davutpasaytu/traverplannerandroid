<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TravelPlanner" parent="Theme.AppCompat.Light.NoActionBar" />

    <!-- Chip için özel tema -->
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/teal_200</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="chipMinHeight">48dp</item>
        <item name="chipIconSize">24dp</item>
        <item name="closeIconEnabled">false</item>
        <item name="chipStrokeColor">@color/teal_700</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="ensureMinTouchTargetSize">true</item>
        <item name="iconStartPadding">8dp</item>
        <item name="iconEndPadding">8dp</item>
        <item name="iconPadding">8dp</item>
    </style>

</resources>